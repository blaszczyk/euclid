#
# half of a random angle
#
randAngle = pi * rand
randRadius = exp(2*rand-1)

o=p(0,0) # origin

p1=p(randRadius,0)
phalf=p( cos(randAngle/2), sin(randAngle/2) )
p2=p( cos(randAngle), sin(randAngle) )

l1=l(o;p1)
lhalf=l(o;phalf)
l2=l(o;p2)

initial = p1 : l2 : l1
required = lhalf
maxdepth = 4
depthfirst = true
maxsolutions = 1
algorithm = point_based
priority = coarse
